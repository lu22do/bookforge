{
  "name": "bookforge",
  "private": true,
  "scripts": {
    "dev:server": "tsx server/src/index.ts",
    "dev:web": "vite --root web",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "build:server": "npx tsc -p tsconfig.json",
    "build:web": "vite build --outDir dist/web --emptyOutDir --root web",
    "build": "npm run build:server && npm run build:web",
    "typecheck": "npx tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "nanoid": "^5.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^24.8.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vite": "^5.4.8"
  }
}
